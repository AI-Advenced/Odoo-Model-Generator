<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Liste pour event.custom -->
        <record id="view_event_custom_tree" model="ir.ui.view">
            <field name="name">Événement - Liste</field>
            <field name="model">event.custom</field>
            <field name="arch" type="xml">
                <tree string="Événement" decoration-muted="not active">
                    
                    <field name="name" optional="show"/>
                    
                    <field name="event_type"/>
                    
                    <field name="start_date"/>
                    
                    <field name="end_date"/>
                    
                    <field name="location" optional="show"/>
                    
                    <field name="max_participants"/>
                    
                    <field name="price"/>
                    
                    <field name="organizer_id"/>
                    
                </tree>
            </field>
        </record>
<!-- Vue Formulaire pour event.custom -->
        <record id="view_event_custom_form" model="ir.ui.view">
            <field name="name">Événement - Formulaire</field>
            <field name="model">event.custom</field>
            <field name="arch" type="xml">
                <form string="Événement">
                    <header>
                        <!-- Boutons d'action -->
                        
                        <button name="toggle_active" type="object" 
                                string="Basculer Actif/Inactif" 
                                class="btn-secondary"/>
                        
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            
                            <button class="oe_stat_button" type="object" 
                                    name="action_view_registration_ids" 
                                    icon="fa-list-ul">
                                <field string="Inscriptions" 
                                       name="registration_ids_count" 
                                       widget="statinfo"/>
                            </button>
                            
                        </div>
                        
                        
                        <field name="image" widget="image" 
                               class="oe_avatar" 
                               options="{'preview_image': 'image', 'size': [90, 90]}"/>
                        
                        
                        <div class="oe_title">
                            
                            <h1>
                                <field name="name" 
                                       placeholder="Nom de l'Événement"/>
                            </h1>
                            
                        </div>
                        
                        <group>
                            
                            <group string="Informations Générales" col="2">
                                
                                <field name="event_type" required="1"/>
                                
                                <field name="location"/>
                                
                                <field name="max_participants"/>
                                
                                <field name="price"/>
                                
                                <field name="status"/>
                                
                            </group>
                            
                        </group>
                        
                        
                        <notebook>
                            
                            <page string="Détails">
                                
                                <group>
                                    
                                    <field name="description" widget="html"/>
                                    
                                    <field name="start_date" required="1"/>
                                    
                                    <field name="end_date" required="1"/>
                                    
                                </group>
                                
                            </page>
                            
                            <page string="Relations">
                                
                                <group>
                                    
                                    <field name="organizer_id" required="1"/>
                                    
                                    <field name="registration_ids"/>
                                    
                                </group>
                                
                            </page>
                            
                        </notebook>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
<!-- Vue Recherche pour event.custom -->
        <record id="view_event_custom_search" model="ir.ui.view">
            <field name="name">Événement - Recherche</field>
            <field name="model">event.custom</field>
            <field name="arch" type="xml">
                <search string="Rechercher Événement">
                    <!-- Champs de recherche -->
                    
                    <field name="name"/>
                    
                    <field name="event_type"/>
                    
                    <field name="location"/>
                    
                    <field name="organizer_id"/>
                    
                    <field name="status"/>
                    
                    
                    <!-- Filtres prédéfinis -->
                    <separator/>
                    
                    <filter string="Actifs" 
                            name="active" 
                            domain="[('active', '=', True)]"/>
                    
                    <filter string="Inactifs" 
                            name="inactive" 
                            domain="[('active', '=', False)]"/>
                    
                    
                    <!-- Groupements -->
                    <separator/>
                    <filter string="Grouper par Type d'Événement" 
                            name="group_by_event_type" 
                            context="{'group_by':'event_type'}"/>
                </search>
            </field>
        </record>
<!-- Vue Kanban pour event.custom -->
        <record id="view_event_custom_kanban" model="ir.ui.view">
            <field name="name">Événement - Kanban</field>
            <field name="model">event.custom</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <field name="event_type"/>
                                    </div>
                                    
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>