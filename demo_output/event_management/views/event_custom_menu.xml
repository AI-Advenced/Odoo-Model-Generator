<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action pour event.custom -->
        <record id="action_event_custom" model="ir.actions.act_window">
            <field name="name">Événement</field>
            <field name="res_model">event.custom</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier événement
                </p>
                <p>
                    Utilisez ce menu pour gérer vos événements.
                    
                </p>
            </field>
            
            
            <field name="view_ids" 
                   eval="[(5, 0, 0),
                          
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_event_custom_kanban')}),
                          
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('view_event_custom_tree')}),
                          
                          (0, 0, {'view_mode': 'form', 'view_id': ref('view_event_custom_form')}),
                          ]"/>
            
        </record>

        

        <!-- Menu principal pour event.custom -->
        <menuitem id="menu_event_custom"
                  name="Événement"
                  action="action_event_custom"
                  
                  sequence="10"
                  groups="base.group_user"/>

        

        
        
        <!-- Action supplémentaire: Événement Actifs -->
        <record id="action_event_custom_active_only" model="ir.actions.act_window">
            <field name="name">Événement Actifs</field>
            <field name="res_model">event.custom</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('active', '=', True)]</field>
            
        </record>
        
        

        
        
        <!-- Action serveur: Archiver Événement -->
        <record id="action_server_event_custom_archive" model="ir.actions.server">
            <field name="name">Archiver Événement</field>
            <field name="model_id" ref="model_event_custom"/>
            <field name="binding_model_id" ref="model_event_custom"/>
            <field name="state">code</field>
            <field name="code">
for record in records:
    record.active = False
</field>
        </record>
        
        <!-- Action serveur: Désarchiver Événement -->
        <record id="action_server_event_custom_unarchive" model="ir.actions.server">
            <field name="name">Désarchiver Événement</field>
            <field name="model_id" ref="model_event_custom"/>
            <field name="binding_model_id" ref="model_event_custom"/>
            <field name="state">code</field>
            <field name="code">
for record in records:
    record.active = True
</field>
        </record>
        
        
    </data>
</odoo>