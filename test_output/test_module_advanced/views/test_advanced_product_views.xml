<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Liste pour test.advanced.product -->
        <record id="view_test_advanced_product_tree" model="ir.ui.view">
            <field name="name">Produit Avancé - Liste</field>
            <field name="model">test.advanced.product</field>
            <field name="arch" type="xml">
                <tree string="Produit Avancé" decoration-muted="not active">
                    
                    <field name="name" optional="show"/>
                    
                    <field name="category_id"/>
                    
                    <field name="tag_ids"/>
                    
                    <field name="status"/>
                    
                    <field name="active" widget="boolean_toggle"/>
                    
                </tree>
            </field>
        </record>
<!-- Vue Formulaire pour test.advanced.product -->
        <record id="view_test_advanced_product_form" model="ir.ui.view">
            <field name="name">Produit Avancé - Formulaire</field>
            <field name="model">test.advanced.product</field>
            <field name="arch" type="xml">
                <form string="Produit Avancé">
                    <header>
                        <!-- Boutons d'action -->
                        
                        <button name="toggle_active" type="object" 
                                string="Basculer Actif/Inactif" 
                                class="btn-secondary"/>
                        
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            
                        </div>
                        
                        
                        
                        <div class="oe_title">
                            
                            <h1>
                                <field name="name" 
                                       placeholder="Nom"/>
                            </h1>
                            
                        </div>
                        
                        <group>
                            
                            <group string="Informations Générales" col="2">
                                
                                <field name="status"/>
                                
                            </group>
                            
                        </group>
                        
                        
                        <notebook>
                            
                            <page string="Relations">
                                
                                <group>
                                    
                                    <field name="category_id" required="1"/>
                                    
                                    <field name="tag_ids" widget="many2many_tags"/>
                                    
                                </group>
                                
                            </page>
                            
                        </notebook>
                        
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
<!-- Vue Recherche pour test.advanced.product -->
        <record id="view_test_advanced_product_search" model="ir.ui.view">
            <field name="name">Produit Avancé - Recherche</field>
            <field name="model">test.advanced.product</field>
            <field name="arch" type="xml">
                <search string="Rechercher Produit Avancé">
                    <!-- Champs de recherche -->
                    
                    <field name="name"/>
                    
                    <field name="category_id"/>
                    
                    <field name="status"/>
                    
                    
                    <!-- Filtres prédéfinis -->
                    <separator/>
                    
                    <filter string="Actifs" 
                            name="active" 
                            domain="[('active', '=', True)]"/>
                    
                    <filter string="Inactifs" 
                            name="inactive" 
                            domain="[('active', '=', False)]"/>
                    
                    
                    <!-- Groupements -->
                    <separator/>
                    <filter string="Grouper par Catégorie" 
                            name="group_by_category_id" 
                            context="{'group_by':'category_id'}"/>
                </search>
            </field>
        </record>
<!-- Vue Kanban pour test.advanced.product -->
        <record id="view_test_advanced_product_kanban" model="ir.ui.view">
            <field name="name">Produit Avancé - Kanban</field>
            <field name="model">test.advanced.product</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <field name="category_id"/>
                                    </div>
                                    
                                    <div class="o_kanban_record_body">
                                        <field name="tag_ids"/>
                                    </div>
                                    
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>