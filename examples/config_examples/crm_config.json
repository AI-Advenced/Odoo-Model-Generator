{
  "module": {
    "name": "CRM Personnalisé",
    "version": "17.0.1.0.0",
    "category": "Sales/CRM",
    "summary": "Module CRM avec fonctionnalités étendues",
    "description": "Module CRM personnalisé avec gestion avancée des prospects, suivi des interactions et analyses détaillées.",
    "author": "CRM Solutions",
    "website": "https://crm-solutions.com",
    "depends": ["base", "mail", "crm", "sale"]
  },
  "models": [
    {
      "name": "crm.prospect.custom",
      "description": "Prospect Personnalisé",
      "inherit": ["crm.lead"],
      "auto_create_views": true,
      "auto_create_menu": true,
      "fields": [
        {
          "name": "custom_score",
          "type": "integer",
          "label": "Score de Qualification",
          "default": 0,
          "help_text": "Score automatique basé sur les critères de qualification"
        },
        {
          "name": "lead_source_detail",
          "type": "char",
          "label": "Détail de la Source",
          "size": 200,
          "help_text": "Informations détaillées sur la source du prospect"
        },
        {
          "name": "industry_segment",
          "type": "selection",
          "label": "Segment d'Industrie",
          "selection": [
            ["technology", "Technologie"],
            ["finance", "Finance"],
            ["healthcare", "Santé"],
            ["education", "Éducation"],
            ["retail", "Commerce de Détail"],
            ["manufacturing", "Industrie"],
            ["services", "Services"],
            ["other", "Autre"]
          ]
        },
        {
          "name": "company_size",
          "type": "selection",
          "label": "Taille de l'Entreprise",
          "selection": [
            ["startup", "Startup (1-10)"],
            ["small", "Petite (11-50)"],
            ["medium", "Moyenne (51-200)"],
            ["large", "Grande (201-1000)"],
            ["enterprise", "Entreprise (1000+)"]
          ]
        },
        {
          "name": "budget_range",
          "type": "selection",
          "label": "Budget Estimé",
          "selection": [
            ["low", "< 10 000 €"],
            ["medium", "10 000 - 50 000 €"],
            ["high", "50 000 - 200 000 €"],
            ["enterprise", "> 200 000 €"]
          ]
        },
        {
          "name": "decision_timeframe",
          "type": "selection",
          "label": "Délai de Décision",
          "selection": [
            ["immediate", "Immédiat (< 1 mois)"],
            ["short", "Court terme (1-3 mois)"],
            ["medium", "Moyen terme (3-6 mois)"],
            ["long", "Long terme (> 6 mois)"]
          ]
        },
        {
          "name": "pain_points",
          "type": "text",
          "label": "Points de Douleur",
          "help_text": "Problèmes identifiés chez le prospect"
        },
        {
          "name": "proposed_solution",
          "type": "html",
          "label": "Solution Proposée",
          "help_text": "Description de la solution recommandée"
        },
        {
          "name": "competitor_analysis",
          "type": "text",
          "label": "Analyse Concurrentielle",
          "help_text": "Analyse de la situation concurrentielle"
        },
        {
          "name": "stakeholder_ids",
          "type": "one2many",
          "label": "Parties Prenantes",
          "comodel_name": "crm.stakeholder",
          "inverse_name": "prospect_id"
        },
        {
          "name": "interaction_ids",
          "type": "one2many",
          "label": "Historique des Interactions",
          "comodel_name": "crm.interaction.history",
          "inverse_name": "prospect_id"
        },
        {
          "name": "next_action",
          "type": "char",
          "label": "Prochaine Action",
          "size": 200
        },
        {
          "name": "next_action_date",
          "type": "datetime",
          "label": "Date Prochaine Action"
        }
      ]
    },
    {
      "name": "crm.stakeholder",
      "description": "Partie Prenante",
      "auto_create_views": true,
      "auto_create_menu": false,
      "fields": [
        {
          "name": "name",
          "type": "char",
          "label": "Nom Complet",
          "required": true,
          "size": 150
        },
        {
          "name": "prospect_id",
          "type": "many2one",
          "label": "Prospect",
          "comodel_name": "crm.prospect.custom",
          "required": true
        },
        {
          "name": "job_title",
          "type": "char",
          "label": "Fonction",
          "size": 100
        },
        {
          "name": "department",
          "type": "char",
          "label": "Département",
          "size": 100
        },
        {
          "name": "role_in_decision",
          "type": "selection",
          "label": "Rôle dans la Décision",
          "selection": [
            ["decision_maker", "Décideur Final"],
            ["influencer", "Influenceur"],
            ["user", "Utilisateur Final"],
            ["gatekeeper", "Gardien"],
            ["champion", "Champion Interne"],
            ["blocker", "Opposant"]
          ]
        },
        {
          "name": "influence_level",
          "type": "selection",
          "label": "Niveau d'Influence",
          "selection": [
            ["high", "Élevé"],
            ["medium", "Moyen"],
            ["low", "Faible"]
          ]
        },
        {
          "name": "email",
          "type": "char",
          "label": "Email",
          "size": 100
        },
        {
          "name": "phone",
          "type": "char",
          "label": "Téléphone",
          "size": 20
        },
        {
          "name": "preferred_contact_method",
          "type": "selection",
          "label": "Méthode de Contact Préférée",
          "selection": [
            ["email", "Email"],
            ["phone", "Téléphone"],
            ["linkedin", "LinkedIn"],
            ["meeting", "Rendez-vous"]
          ]
        },
        {
          "name": "notes",
          "type": "text",
          "label": "Notes"
        }
      ]
    },
    {
      "name": "crm.interaction.history",
      "description": "Historique des Interactions",
      "auto_create_views": true,
      "auto_create_menu": false,
      "fields": [
        {
          "name": "name",
          "type": "char",
          "label": "Sujet",
          "required": true,
          "size": 200
        },
        {
          "name": "prospect_id",
          "type": "many2one",
          "label": "Prospect",
          "comodel_name": "crm.prospect.custom",
          "required": true
        },
        {
          "name": "stakeholder_id",
          "type": "many2one",
          "label": "Partie Prenante",
          "comodel_name": "crm.stakeholder"
        },
        {
          "name": "interaction_type",
          "type": "selection",
          "label": "Type d'Interaction",
          "selection": [
            ["call", "Appel Téléphonique"],
            ["email", "Email"],
            ["meeting", "Rendez-vous"],
            ["demo", "Démonstration"],
            ["proposal", "Présentation de Proposition"],
            ["followup", "Suivi"],
            ["social", "Réseaux Sociaux"],
            ["event", "Événement"],
            ["webinar", "Webinaire"],
            ["other", "Autre"]
          ],
          "required": true
        },
        {
          "name": "date",
          "type": "datetime",
          "label": "Date et Heure",
          "required": true,
          "default": "fields.Datetime.now"
        },
        {
          "name": "duration_minutes",
          "type": "integer",
          "label": "Durée (minutes)",
          "default": 30
        },
        {
          "name": "channel",
          "type": "selection",
          "label": "Canal",
          "selection": [
            ["direct", "Direct"],
            ["phone", "Téléphone"],
            ["email", "Email"],
            ["video", "Visioconférence"],
            ["in_person", "En personne"],
            ["social", "Réseaux sociaux"],
            ["chat", "Chat/Messagerie"]
          ]
        },
        {
          "name": "summary",
          "type": "text",
          "label": "Résumé",
          "help_text": "Résumé de l'interaction"
        },
        {
          "name": "details",
          "type": "html",
          "label": "Détails",
          "help_text": "Compte-rendu détaillé de l'interaction"
        },
        {
          "name": "outcome",
          "type": "selection",
          "label": "Résultat",
          "selection": [
            ["very_positive", "Très Positif"],
            ["positive", "Positif"],
            ["neutral", "Neutre"],
            ["negative", "Négatif"],
            ["very_negative", "Très Négatif"],
            ["no_response", "Pas de Réponse"]
          ]
        },
        {
          "name": "next_steps",
          "type": "text",
          "label": "Prochaines Étapes",
          "help_text": "Actions à entreprendre suite à cette interaction"
        },
        {
          "name": "follow_up_required",
          "type": "boolean",
          "label": "Suivi Requis",
          "default": false
        },
        {
          "name": "follow_up_date",
          "type": "datetime",
          "label": "Date de Suivi Prévue"
        },
        {
          "name": "attachments",
          "type": "text",
          "label": "Pièces Jointes",
          "help_text": "Liste des documents échangés"
        },
        {
          "name": "user_id",
          "type": "many2one",
          "label": "Responsable",
          "comodel_name": "res.users",
          "default": "lambda self: self.env.user",
          "required": true
        }
      ]
    }
  ],
  "global_menu": {
    "root_menu_name": "CRM Personnalisé",
    "root_menu_id": "crm_custom_root"
  }
}